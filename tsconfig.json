{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "rootDirs": ["./src", "./tests"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es5", "es2015", "es2016", "dom"],
    "noUnusedLocals": true,
    "allowJs": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts"],
  "exclude": ["dist/**/*.*"]
}
